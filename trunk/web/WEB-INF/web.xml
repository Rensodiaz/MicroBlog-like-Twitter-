<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>Autenticacion</filter-name>
        <filter-class>filtros.Autenticacion</filter-class>
    </filter>
    <filter>
        <filter-name>Login</filter-name>
        <filter-class>filtros.Login</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Autenticacion</filter-name>
        <url-pattern>/index.jsp</url-pattern>
        <url-pattern>/buscarHashTags.jsp</url-pattern>
        <url-pattern>/ListaUsuarios</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Login</filter-name>
        <url-pattern>/login.jsp</url-pattern>
        <url-pattern>/registro.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <listener>
        <listener-class>eventos.InicioAplicacion</listener-class>
    </listener>
    <servlet>
        <servlet-name>Usuario</servlet-name>
        <servlet-class>controladores.UsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Hashtag</servlet-name>
        <servlet-class>controladores.HashtagController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>subirImagenController</servlet-name>
        <servlet-class>controladores.subirImagenController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateUsuarioController</servlet-name>
        <servlet-class>controladores.updateUsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublicacionController</servlet-name>
        <servlet-class>controladores.PublicacionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Hashtag</servlet-name>
        <url-pattern>/HashtagController</url-pattern>
        <url-pattern>/Hashtag</url-pattern>
        <url-pattern>/hashtag</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Usuario</servlet-name>
        <url-pattern>/usuario</url-pattern>
        <url-pattern>/UsuarioController</url-pattern>
        <url-pattern>/Usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicacionController</servlet-name>
        <url-pattern>/PublicacionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicacionController</servlet-name>
        <url-pattern>/publicacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>subirImagenController</servlet-name>
        <url-pattern>/subirImagenController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateUsuarioController</servlet-name>
        <url-pattern>/updateUsuarioController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
